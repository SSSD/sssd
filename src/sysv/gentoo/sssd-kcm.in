description="SSSD Kerberos Cache Manager"
command="@libexecdir@/sssd/sssd_kcm"
command_background="true"
command_args="--logger=files ${SSSD_KCM_OPTIONS}"
pidfile="@pidpath@/sssd_kcm.pid"

depend()
{
    need localmount clock
    use syslog
    before sssd
}
